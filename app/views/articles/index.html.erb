<div class="row margin-custom">
    <div class="col-md-5 offset-md-1 ">
        <%= link_to "Create new article", new_article_path, class: "btn btn-success" %>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="center">Listing all articles</h2>
    </div>
</div>
<% @articles.each do |article|%>
    <div class="row" style="margin-top: 1.5rem">
        <div class="col-md-6 offset-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <%= link_to article.title, article_path(article)%>
                </div>
                <div class="card-block">
                    <p class="card-text">
                    <%= truncate(article.description, length: 40)%>
                    </p>
                    <div class="article-meta-details">
                        Created by: <%= article.user.username if article.user%>,
                        <%= time_ago_in_words(article.created_at) %> ago, 
                        last updated: <%= time_ago_in_words(article.updated_at) %> ago
                    </div>
                    
                        <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-primary" %> 
                        <%= link_to "Delete this article", article_path(article), method: :delete,
                            data: { confirm: "Are you sure you want to delete the article?"}, 
                            class:"btn btn-danger"%>
                </div>
            </div>
        </div>
    </div>
<%end%>