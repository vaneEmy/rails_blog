<%= render 'shared/errors', obj: @article %>

<div class="row">
 <div class="col-md-6 offset-md-3">
    <%= form_for @article do |f| %>
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">
               <%= f.label :title %>
            </label>
            <div class="col-sm-10">
                <%= f.text_field :title, class: "form-control", type: "text", id: "inputTitle"%>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputDescription" class="col-sm-2 col-form-label">
                <%= f.label :description %><br/>
            </label>
            <div class="col-sm-10">
                <%= f.text_area :description, rows: "3", class: "form-control", id: "inputDescription" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <%= f.submit type: "submit", class: "btn btn-primary"%>
            </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
       [ <%= link_to "Return to articles listing", articles_path%> ] 
    </div>
    </div>
</div>