<h1 class="center margin-custom"> Welcome to <%= @user.username %>'s page</h1>

<div class="row">
    <div class="col-md-10 offset-md-5">
        <%= gravatar_for @user, size: 150 %>
    </div>
</div>

<div class="row">
    <div class="col-md-9 offset-md-1">
        <h4 class="center"><%= @user.username%>'s articles</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-5">
        <%= will_paginate @user_articles %>
    </div>
</div>

<%= render 'articles/article', obj: @user_articles%>

<div class="row">
    <div class="col-md-6 offset-md-5">
        <%= will_paginate @user_articles %>
    </div>
</div>
