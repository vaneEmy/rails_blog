<h1 class="center margin-custom blood">Listing all Categories </h1>

<div class="row">
    <div class="col-md-6 offset-md-5">
        <%= will_paginate :style => 'color:blue' %>
    </div>
</div>

<% @categories.each do |category| %>
    <div class="row" style="margin-top: 1.5rem">
        <div class="col-md-6 offset-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h4><%= link_to "#{category.name}", category_path(category), class: "card-title "%></h4>
                    <small class="card-body details"> <%= pluralize(category.articles.count, "article")%></small>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-6 offset-md-5">
        <%= will_paginate :style => 'color:blue' %>
    </div>
</div>