<h1 class="center margin-custom blood">Log in</h1>

<div class="row">
     <div class="col-md-6 offset-md-3">
        <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group row">
                <label for="inputEmail" class="col-sm-2 col-form-label">
                    <%= f.label :email %><br/>
                </label>
                <div class="col-sm-10">
                    <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Enter email" %>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">
                    <%= f.label :password %><br/>
                </label>
                <div class="col-sm-10">
                    <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Enter password", autocomplete: "off" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <%= f.submit "Log in", type: "submit", class: "btn btn-primary"%>

                </div>
            </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Return to articles listing", articles_path%> ] 
        </div>
    </div>
</div>